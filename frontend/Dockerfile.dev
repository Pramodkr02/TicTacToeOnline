FROM node:20-alpine AS development
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose port used by Vite
EXPOSE 5173

# Start development server, listen on all interfaces so container is accessible
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
